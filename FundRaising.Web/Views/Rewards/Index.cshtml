@model IEnumerable<FundRaising.Core.Models.Reward>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RewardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RewardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RewardId">Delete</a> |
                <a asp-action="Buy" asp-route-id="@item.RewardId">Buy</a>
            </td>
        </tr>
}
    </tbody>
</table>
