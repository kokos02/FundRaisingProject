@model IEnumerable<FundRaising.Core.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create a new Project</a>
    <!--<button type="button" asp-action="Create" class="btn btn-primary">Create a new Project</button> -->

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Project Category
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th>
               Current Fund
            </th>
            <th>
               Target Fund
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectCategory)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Deadline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentFund)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetFund)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a> |
                    <a asp-action="Product" asp-route-id="@item.ProjectId">View</a> |
                    <a asp-action="Add" asp-route-id="@item.ProjectId">Add</a>
                </td>
            </tr>
        }
    </tbody>
</table>
