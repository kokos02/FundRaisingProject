@model FundRaising.Core.Models.Project

@{
    ViewData["Title"] = "Product";
}


<section class="item content">
    <div class="container toparea">
        <div class="underlined-title">
            <div class="editContent">
                <h1 class="text-center latestitems">@Html.DisplayFor(model => model.Title)</h1>
            </div>
            <div class="wow-hr type_short">
                <span class="wow-hr-h">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="productbox">
                    <img src="images/product2-2.jpg" alt="">
                    <div class="clearfix">
                    </div>
                    <br />
                    <div class="product-details text-left">
                        <p>
                            @Html.DisplayFor(model => model.Description);
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <a asp-action="Add" asp-route-id="@Model.ProjectId" asp-route-value="TextArea1.value">bale xrhma</a>
                <div class="input-group mb-3">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button asp-action="Add" asp-route-id="@Html.DisplayFor(model => model.ProjectId)" class="btn btn-outline-secondary" type="button">€</button>
                        </div>
                        <input type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                    </div>
                    <div class="properties-box">
                        <ul class="unstyle">
                            <li><b class="propertyname">Current Fund</b> @Html.DisplayFor(model => model.CurrentFund)</li>
                            <li><b class="propertyname">Deadline</b> @Html.DisplayFor(model => model.Deadline)</li>
                            <li><b class="propertyname">Choose a Reward Package below</li>
                            <li><b class="propertyname">50 euro package</b><a asp-action="Add" asp-route-id="@Model.ProjectId"> buy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
</section>

